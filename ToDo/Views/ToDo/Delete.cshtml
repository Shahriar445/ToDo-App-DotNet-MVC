@model ToDo

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-danger">Delete Task</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">Are you sure you want to delete this task?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsDone)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsDone)
        </dd>
    </dl>
</div>

<div class="d-flex justify-content-between mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
    </form>
    <a asp-action="Index" class="btn btn-info btn-lg">Back to List</a>
</div>
