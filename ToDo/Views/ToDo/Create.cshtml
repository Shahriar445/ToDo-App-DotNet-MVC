@model ToDo

<div class="container mt-5">
    <h2 class="text-primary mb-4">📝 Create New Task</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Details" class="form-label fw-bold">Details</label>
                            <input asp-for="Details" class="form-control" placeholder="Enter task details" />
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-bold">Due Date</label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsDone" class="form-check-input" />
                            <label asp-for="IsDone" class="form-check-label fw-bold">Is Completed?</label>
                            <span asp-validation-for="IsDone" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">✅ Create</button>
                            <a asp-action="Index" class="btn btn-outline-primary">🔙 Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
